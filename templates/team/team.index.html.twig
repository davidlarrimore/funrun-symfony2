{% extends 'template.html.twig' %}

{% block css %}
{% endblock %}

{% block title %}Team Rankings{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <h1>Team Rankings</h1>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 offset-md-2">
            <br/>
            <table id="teamIndexTable" class="table table-hover table-outline mb-0">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Name</th>
                        <th>Donations</th>
                        <th>Rank</th>
                    </tr>
                </thead>
                <tbody>
                    {% for team in teams %}
                        <tr>
                            <td>{{ team.team_type_name }}</td>
                            <td>
                                <a href="{{ path('team_show', {'campaignUrl':campaign.url, 'teamUrl': team.team_url }) }}">{{ team.team_name }}</a>
                            </td>
                            <td style="text-align:right;">{% if not team.donation_amount == 0 %}${{ team.donation_amount|number_format(2, '.', ',')}}{% endif %}</td>
                            <td style="text-align:center;vertical-align: middle;">
                              <span class="badge badge-{% if team.rank == 1 %}success{% elseif team.rank == 2 %}warning{% elseif team.rank == 3 %}primary{% else %}default{% endif %}">{{ team.rank }}</span>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}

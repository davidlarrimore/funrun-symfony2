{% extends 'template.html.twig' %}

{% block title %}Classroom Rankings{% endblock %}

{% block css %}
{% endblock %}

{% block body %}
<div class="row">
    <div class="col">
        <h1>Classroom Rankings</h1>
    </div>
</div>
<div class="clearfix"></div>
<hr/>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-10 offset-md-1">
          <table id="classroomIndexTable" class="table table-hover table-outline mb-0">
              <thead class="thead-default">
                  <tr>
                      <th>Grade</th>
                      <th>Classroom's Name</th>
                      <th>Donations</th>
                      <th>Rank</th>
                  </tr>
              </thead>
              <tbody>
                  {% for classroom in classrooms %}
                      <tr>
                          <td>{{ classroom.grade_name}}</td>
                          <td><a href="{{ path(entity|lower ~ '_show', {'campaignUrl': campaign.url, 'id': classroom.id }) }}">{{ classroom.classroom_name }}</a></td>
                          <td style="text-align:right;">{% if not classroom.donation_amount == 0 %}${{ classroom.donation_amount|number_format(2, '.', ',')}}{% endif %}</td>
                          <td style="text-align:center;vertical-align: middle;"><span class="badge badge-{% if classroom.rank == 1 %}success{% elseif classroom.rank == 2 %}warning{% elseif classroom.rank == 3 %}primary{% else %}default{% endif %}">{{ classroom.rank}}</span></td>
                      </tr>
                  {% endfor %}
              </tbody>
          </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}

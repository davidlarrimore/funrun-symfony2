{% extends 'crud.html.twig' %}
{% use 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>View Campaign</h1>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-2">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ campaignsetting.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ campaignsetting.name }}</td>
                    </tr>
                    <tr>
                        <th>Value</th>
                        <td>{{ campaignsetting.value }}</td>
                    </tr>
                    <tr>
                        <th>Format</th>
                        <td>
                            {% if campaignsetting.format is defined %}{{ campaignsetting.format }}{% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>
                            {% if campaignsetting.description is defined %}{{ campaignsetting.description }}{% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
            {{ form_start(delete_form) }}
            <a href="{{ path(entity|lower ~ '_index') }}" class="btn btn-info">Back</a>
            <a href="{{ path(entity|lower ~ '_edit', { 'id': campaignsetting.id }) }}" class="btn btn-primary">Edit</a>
            <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete {{campaignsetting.id}}?')" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}

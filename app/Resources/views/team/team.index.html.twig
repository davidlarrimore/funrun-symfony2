{% extends 'template.html.twig' %}
{% use 'bootstrap_3_layout.html.twig' %}

{% block css %}
<!-- Datatables styles -->
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap4.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>Teams</h1>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <br/>
            <table class="table table-hover table-outline mb-0">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Name</th>
                        <th>Donations</th>
                        <th>Rank</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for team in teams %}
                        <tr>
                            <td>{{ team.team_type_name }}</td>
                            <td>
                                <a href="{{ path('team_show', {'campaignUrl':campaign.url, 'teamUrl': team.team_url }) }}">{{ team.team_name }}</a>
                            </td>
                            <td style="text-align:right;">{% if not team.donation_amount == 0 %}${{ team.donation_amount|number_format(2, '.', ',')}}</span>{% endif %}</td>
                            <td style="text-align:center;vertical-align: middle;">
                              <span class="badge badge-{% if team.rank == 1 %}success{% elseif team.rank == 2 %}warning{% elseif team.rank == 3 %}primary{% else %}default{% endif %}">{{ team.rank }}</span>
                            </td>
                            <td style="text-align:center;">
                                <a href="{{ path('team_show', {'campaignUrl':campaign.url, 'teamUrl': team.team_url }) }}" class="btn btn-sm btn-info">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                    <span class="hidden-xs hidden-sm">
                                        View</span>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
  <script type="application/javascript" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
  <script type="application/javascript" src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.table').DataTable({ "pageLength": 50, "order": [[ 1, "desc" ]]});
        });
    </script>
{% endblock %}

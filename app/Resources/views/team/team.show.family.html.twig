{% extends 'template.html.twig' %}

{% block body %}
{% set nonConfirmed = false %}
<div class="row">
    <div class="col-md-12">
        <h1 style="text-align:center;">{{ team.name }}</h1>
    </div>
</row>
<!--
    <div class="col-md-6">
        {% if is_granted('ROLE_USER') and app.user.id == team.user.id %}<a href="{{ path('team_edit', {'campaignUrl':campaign.url, 'teamUrl': team.url }) }}" class="btn btn-primary pull-right"><i class="fa fa-pencil" aria-hidden="true"></i> Edit Team</a>{% endif %}
    </div>
-->
</div>
<hr/>
<div class="row">
    <div class="col-sm-8">
        <div clas="row">
          <div class="col-sm-8 col-sm-offset-2">
            <img src="/assets/img/{{ team.teamType.value }}-image-default.png"  alt="..." class="img-responsive">
          </div>
        </div>
    </div>
    <div class="col-sm-4">
      <div class="row">
        <div class="col-sm-12">
              <p class="lead"><strong>0$</strong> of ${{team.fundingGoal|number_format(2, '.', ',')}} goal</p>
              <div class="progress">
                  <div
                      class="progress-bar progress-bar-warning"
                      role="progressbar"
                      aria-valuenow="{{ 0 / team.fundingGoal * 100}}"
                      aria-valuemin="0"
                      aria-valuemax="100"
                      style="width:{{ 0 / team.fundingGoal * 100}}%">
                      <span>{{ (0 / team.fundingGoal * 100)|number_format(2, '.', ',')}}% Complete</span>
                  </div>
              </div>
              <p>Raised by x donors<p>
              <hr>
              <p><a href="{{ path('donation_index', {'campaignUrl': campaign.url, 'teamUrl': team.url, 'type': 'team' }) }}" class="btn btn-primary btn-lg btn-block">DONATE NOW!</a></p>
              <p><a href="http://www.facebook.com/share.php?u={{ app.request.uri }}" target="_blank" class="btn btn-info btn-block"><i class="fa fa-facebook-official" aria-hidden="true"></i> Share on Facebook</a></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-12">
          <p>Created By <strong>{{team.user.firstName}} {{team.user.lastName}}</strong></p>
        </div>
      </div>
    </div>
</div>
<hr/>
<div class="row">
    <div class="col-sm-12">
      <h3>About this Team:</h3>
      <p class="lead">{{ team.description }}</p>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-12">
      <h3>Children:</h3>
    </div>
</div>
<div class="row">
    {% if teamStudents|length == 3%}
      {% set panelWidth = "4" %}
    {% else %}
      {% set panelWidth = "6"%}
    {% endif %}
    {% for teamStudent in teamStudents %}
    <div class="col-sm-{{panelWidth}}">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="media">
            <div class="media-left">
                <img class="media-object img-circle" src="/assets/img/child-avatar-default.png" alt="Child Avatar Image">
            </div>
            <div class="media-body">
              <h4 class="media-heading">{{ teamStudent.name }}</h4>
              <hr>
              <p class="lead">{{ teamStudent.classroom.grade.name }}<br>
              {{ teamStudent.classroom.name }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
</div>

{% endblock %}

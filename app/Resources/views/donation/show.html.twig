{% extends 'crud.html.twig' %}
{% use 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>View Donation</h1>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <dl class="dl-horizontal">
            <dt>ID</dt>
            <dd>{{ donation.id }}</dd>
            <dt>Donated At</dt>
            <dd>{{ donation.donatedAt|date("m/d/Y") }}</dd>
            <dt>Teacher</dt>
            <dd>{% if donation.student is defined %}{{ donation.student.teacher.grade.name }} - {{ donation.student.teacher.teachername }}{% endif %}</dd>
            <dt>Student</dt>
            <dd>{{ donation.student.name }}</dd>
            <dt>Amount</dt>
            <dd>${{ donation.amount|number_format(2, '.', ',') }}</dd>
          </dl>

            {{ form_start(delete_form) }}
            <a href="{{ path(entity|lower ~ '_index') }}" class="btn btn-info">Back</a>
            <a href="{{ path(entity|lower ~ '_edit', { 'id': donation.id }) }}" class="btn btn-primary">Edit</a>
            <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete {{donation.id}}?')" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}

{% extends 'crud.html.twig' %}
{% use 'bootstrap_3_layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>Offline Donations</h1>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div style="text-align:right;">
                <a href="{{ path(entity|lower ~ '_new') }}" class="btn btn-default">
                    <i class="glyphicon glyphicon-plus"></i>
                    Add New</a>
                <a href="{{ path(entity|lower ~ '_upload') }}?file_type=Offlinedonation" class="btn btn-default">
                    <i class="glyphicon glyphicon-upload"></i>
                    Upload FUNRUN LEDGER</a>
                    <a href="{{ path(entity|lower ~ '_upload') }}?file_type=Causevoxdonation" class="btn btn-default">
                        <i class="glyphicon glyphicon-upload"></i>
                        Upload CauseVox File</a>
            </div>
            <br/>
            <table class="table table-bordered table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Donated At</th>
                        <th>Teacher</th>
                        <th>Student</th>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for donation in donations %}
                        <tr>
                            <td>
                                <a href="{{ path(entity|lower ~ '_show', { 'id': donation.id }) }}">{{ donation.id }}</a>
                            </td>
                            <td>{{ donation.donatedAt|date("m/d/Y")  }}</td>
                            <td>{% if donation.student.teacher is defined %}{{ donation.student.teacher.teacherName }}{% endif %}</td>
                            <td>{% if donation.student is defined %}{{ donation.student.name }}{% endif %}</td>
                            <td>{% if donation.type is defined %}{{ donation.type }}{% endif %}</td>
                            <td style="text-align:right;">${{ donation.amount|number_format(2, '.', ',')  }}</td>
                            <td style="text-align:center;">
                                <a href="{{ path(entity|lower ~ '_show', { 'id': donation.id }) }}" class="btn btn-sm btn-info">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                    <span class="hidden-xs hidden-sm">
                                        View</span>
                                </a>
                                <a href="{{ path(entity|lower ~ '_edit', { 'id': donation.id }) }}" class="btn btn-sm btn-warning">
                                    <i class="glyphicon glyphicon-edit"></i>
                                    <span class="hidden-xs hidden-sm">
                                        Edit</span>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
<script>
$(document).ready(function(){
    $('.table').DataTable();
});

</script>
{% endblock %}

{% extends 'crud.html.twig' %}
{% use 'bootstrap_3_layout.html.twig' %}

{% block body %}
    <div class="row" style="border-bottom:1px;">
        <div class="col-md-4">
            <h1>Students</h1>
        </div>
        <div class="col-md-8" style="text-align:right;">
            <div style="">
                <a href="{{ path(entity|lower ~ '_new') }}" class="btn btn-success">
                    <i class="glyphicon glyphicon-plus"></i>
                    Add New</a>
                <a href="{{ path(entity|lower ~ '_upload') }}" class="btn btn-danger">
                    <i class="glyphicon glyphicon-upload"></i>
                    Upload CSV</a>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <hr/>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <table class="table table-bordered dt-responsive table-striped">
                <thead>
                    <tr>
                        <th>Teacher</th>
                        <th>Student's Name</th>
                        <th>Donations</th>
                        <th>Rank</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for student in students %}
                        <tr>
                            <td><a href="{{ path('teacher_show', { 'id': student.teacher_id }) }}">{{ student.grade_name }}
                                -
                                {{ student.teacher_name }}</a></td>
                            <td><a href="{{ path(entity|lower ~ '_show', { 'id': student.student_id }) }}">{{ student.student_name }}</a></td>
                            <td style="text-align:right;">{% if not student.donation_amount == 0 %}${{ student.donation_amount|number_format(2, '.', ',')}}{% endif %}</td>
                            <td style="text-align:center;vertical-align: middle;"><span class="label label-{% if student.rank == 1 %}success{% elseif student.rank == 2 %}warning{% elseif student.rank == 3 %}primary{% else %}default{% endif %}">{{ student.rank }}</span></td>
                            <td style="text-align:center;">
                                <a href="{{ path(entity|lower ~ '_show', { 'id': student.student_id }) }}" class="btn btn-sm btn-info">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                    <span class="hidden-xs hidden-sm">
                                        View</span>
                                </a>
                                {% if is_granted('ROLE_ADMIN') %}<a href="{{ path(entity|lower ~ '_edit', { 'id': student.student_id }) }}" class="btn btn-sm btn-warning">
                                    <i class="glyphicon glyphicon-edit"></i>
                                    <span class="hidden-xs hidden-sm">
                                        Edit</span>
                                </a>{% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('.table').DataTable({ "pageLength": 50});
        });
    </script>
{% endblock %}

{% extends 'crud.html.twig' %}
{% use 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>View Student</h1>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">

            <dl class="dl-horizontal">
                <dt>ID</dt>
                <dd>{{ student.id }}</dd>
                <dt>Teacher</dt>
                <dd>{{ student.teacher.grade.name }}
                    -
                    {{ student.teacher.teachername }}</dd>
                <dt>Student</dt>
                <dd>{{ student.name }}</dd>
            </dl>

            {{ form_start(delete_form) }}
            <a href="{{ path(entity|lower ~ '_index') }}" class="btn btn-info">Back</a>
            <a href="{{ path(entity|lower ~ '_edit', { 'id': student.id }) }}" class="btn btn-primary">Edit</a>
            <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete {{student.id}}?')" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}

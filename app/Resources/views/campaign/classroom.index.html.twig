{% extends 'template.html.twig' %}

{% block body %}

{% block css %}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/dt-1.10.12/fh-3.1.2/r-2.1.0/sc-1.4.2/datatables.min.css"/>
{% endblock %}

<div class="row" style="border-bottom:1px;">
    <div class="col-md-4">
        <h1>Students</h1>
    </div>
</div>
<div class="clearfix"></div>
<hr/>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
          <table class="table table-responsive table-hover table-outline mb-0">
              <thead class="thead-default">
                  <tr>
                      <th>Grade</th>
                      <th>Classroom's Name</th>
                      <th>Donations</th>
                      <th>Rank</th>
                      <th class="col-md-2 col-sm-1">Actions</th>
                  </tr>
              </thead>
              <tbody>
                  {% for classroom in classrooms %}
                      <tr>
                          <td><a href="{{ path('grade_show', {'campaignUrl': campaign.url, 'id': classroom.grade_id }) }}">{{ classroom.grade_name}}</a></td>
                          <td><a href="{{ path(entity|lower ~ '_show', {'campaignUrl': campaign.url, 'id': classroom.id }) }}">{{ classroom.classroom_name }}</a></td>
                          <td style="text-align:right;">{% if not classroom.donation_amount == 0 %}${{ classroom.donation_amount|number_format(2, '.', ',')}}</span>{% endif %}</td>
                          <td style="text-align:center;vertical-align: middle;"><span class="label label-{% if classroom.rank == 1 %}success{% elseif classroom.rank == 2 %}warning{% elseif classroom.rank == 3 %}primary{% else %}default{% endif %}">{{ classroom.rank}}</span></td>
                          <td style="text-align:center;vertical-align: middle;">
                              <a href="{{ path('classroom_show', {'campaignUrl': campaign.url, 'id': classroom.id }) }}" class="btn btn-sm btn-info">
                                  <i class="glyphicon glyphicon-eye-open"></i>
                                  <span class="hidden-xs hidden-sm">
                                      View</span>
                              </a>
                          </td>
                      </tr>
                  {% endfor %}
              </tbody>
          </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="application/javascript" src="https://cdn.datatables.net/v/bs/dt-1.10.12/fh-3.1.2/r-2.1.0/sc-1.4.2/datatables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.table').DataTable({ "pageLength": 50, "order": [[ 4, "desc" ]]});
        });
    </script>
{% endblock %}

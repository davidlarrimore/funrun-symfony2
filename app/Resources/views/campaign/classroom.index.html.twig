{% extends 'template.html.twig' %}

{% block title %}Classrooms{% endblock %}

{% block css %}
<!-- Datatables styles -->
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap4.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="row" style="border-bottom:1px;">
    <div class="col-md-4">
        <h1>Classrooms</h1>
    </div>
</div>
<div class="clearfix"></div>
<hr/>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-10 offset-md-1">
          <table class="table table-hover table-outline mb-0">
              <thead class="thead-default">
                  <tr>
                      <th>Grade</th>
                      <th>Classroom's Name</th>
                      <th>Donations</th>
                      <th>Rank</th>
                      <th>Actions</th>
                  </tr>
              </thead>
              <tbody>
                  {% for classroom in classrooms %}
                      <tr>
                          <td>{{ classroom.grade_name}}</td>
                          <td><a href="{{ path(entity|lower ~ '_show', {'campaignUrl': campaign.url, 'id': classroom.id }) }}">{{ classroom.classroom_name }}</a></td>
                          <td style="text-align:right;">{% if not classroom.donation_amount == 0 %}${{ classroom.donation_amount|number_format(2, '.', ',')}}</span>{% endif %}</td>
                          <td style="text-align:center;vertical-align: middle;"><span class="badge badge-{% if classroom.rank == 1 %}success{% elseif classroom.rank == 2 %}warning{% elseif classroom.rank == 3 %}primary{% else %}default{% endif %}">{{ classroom.rank}}</span></td>
                          <td style="text-align:center;vertical-align: middle;">
                              <a href="{{ path('classroom_show', {'campaignUrl': campaign.url, 'id': classroom.id }) }}" class="btn btn-sm btn-info">
                                  <i class="glyphicon glyphicon-eye-open"></i>
                                  <span class="hidden-xs hidden-sm">
                                      View</span>
                              </a>
                          </td>
                      </tr>
                  {% endfor %}
              </tbody>
          </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
  <script type="application/javascript" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
  <script type="application/javascript" src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.table').DataTable({ "pageLength": 50, "order": [[ 4, "desc" ]]});
        });
    </script>
{% endblock %}

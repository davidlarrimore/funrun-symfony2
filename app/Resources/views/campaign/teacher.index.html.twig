{% extends 'template.html.twig' %}

{% block body %}

<div class="row" style="border-bottom:1px;">
    <div class="col-md-4">
        <h1>Students</h1>
    </div>
</div>
<div class="clearfix"></div>
<hr/>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
          <table class="table table-responsive table-hover table-outline mb-0">
              <thead class="thead-default">
                  <tr>
                      <th>Grade</th>
                      <th>Teacher's Name</th>
                      <th>Donations</th>
                      <th>Rank</th>
                      <th class="col-md-2 col-sm-1">Actions</th>
                  </tr>
              </thead>
              <tbody>
                  {% for teacher in teachers %}
                      <tr>
                          <td><a href="{{ path('grade_show', {'campaignUrl': campaign.url, 'id': teacher.grade_id }) }}">{{ teacher.grade_name}}</a></td>
                          <td><a href="{{ path(entity|lower ~ '_show', {'campaignUrl': campaign.url, 'id': teacher.id }) }}">{{ teacher.teacher_name }}</a></td>
                          <td style="text-align:right;">{% if not teacher.donation_amount == 0 %}${{ teacher.donation_amount|number_format(2, '.', ',')}}</span>{% endif %}</td>
                          <td style="text-align:center;vertical-align: middle;"><span class="label label-{% if teacher.rank == 1 %}success{% elseif teacher.rank == 2 %}warning{% elseif teacher.rank == 3 %}primary{% else %}default{% endif %}">{{ teacher.rank}}</span></td>
                          <td style="text-align:center;vertical-align: middle;">
                              <a href="{{ path('teacher_show', {'campaignUrl': campaign.url, 'id': teacher.id }) }}" class="btn btn-sm btn-info">
                                  <i class="glyphicon glyphicon-eye-open"></i>
                                  <span class="hidden-xs hidden-sm">
                                      View</span>
                              </a>
                          </td>
                      </tr>
                  {% endfor %}
              </tbody>
          </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('.table').DataTable({ "pageLength": 50, "order": [[ 4, "desc" ]]});
        });
    </script>
{% endblock %}

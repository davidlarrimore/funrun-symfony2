{% extends 'template.html.twig' %}
{% use 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
    {% set number_of_donations = 0 %}
    {% set donation_amount = 0 %}
        {% for donation in classroom.donations %}
            {% set number_of_donations = number_of_donations + 1 %}
            {% set donation_amount = donation_amount + donation.amount %}
    {% endfor %}

    <div class="row" style="">
        <div class="col-md-4">
            <h1>{{ classroom.name }}</h1>
        </div>
        <div class="col-md-8" style="text-align:right;">
            <div style="">
                <a href="{{ path('classroom_index', { 'campaignUrl': campaign.url }) }}" class="btn btn-default">
                    <i class="glyphicon glyphicon-user"></i>
                    Back to Classrooms List</a>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <hr/>
    <div class="clearfix"></div>
    {% for campaign_award in campaign_awards %}
        {% if campaign_award.campaignawardtype.value == "classroom" %}
            {% if campaign_award.campaignawardstyle.value == "place" %}
                {% if campaign_award.place == classroom_rank %}
                    <div class="row">
                        <div class="col-md-12">
                            <div class="well" style="text-align:center;background-color: #dff0d8;">
                                <h5>This class is currently rank
                                    <span class="label label-success">{{ classroom_rank }}</span>, which means it could get the ''{{campaign_award.name}}' Prize!!</h5>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        {% endif %}
    {% endfor %}
    <div class="row">
        <div class="col-sm-5">
            <div class="panel panel-default">
                <div class="panel-heading">Classroom Info</div>
                <table class="table table-bordered dt-responsive table-condensed">
                    <tbody>
                        <tr>
                            <th style="text-align:right;">Grade</th>
                            <td>
                            <a href="{{ path('grade_show', {'campaignUrl': campaign.url, 'id': classroom.grade.id }) }}">{{ classroom.grade.name }}</a>
                            </td>
                        </tr>
                        <tr>
                            <th style="text-align:right;">Name</th>
                            <td>
                                {{ classroom.name }}
                            </td>
                        </tr>
                        {% if is_granted('ROLE_USER') %}
                            <tr>
                                <th style="text-align:right;">Email</th>
                                <td>
                                    {{ classroom.email }}
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">Students</th>
                                <td>
                                    {{ classroom.students|length }}
                                </td>
                            </tr>
                        {% endif %}
                        <tr>
                            <th style="text-align:right;">Donations</th>
                            <td>{{ number_of_donations }}</td>
                        </tr>
                        <tr>
                            <th style="text-align:right;">Amount</th>
                            <td>${{ donation_amount|number_format(2, '.', ',') }}</td>
                        </tr>
                        <tr>
                            <th style="text-align:right;">Rank</th>
                            <td style="vertical-align: middle;">
                                <span class="label label-{% if classroom_rank == 1 %}success{% elseif classroom_rank == 2 %}warning{% elseif classroom_rank == 3 %}primary{% else %}default{% endif %}">{{ classroom_rank }}</span>
                            </tr>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-sm-7">
            <div class="panel panel-default">
                <div class="panel-heading">Class Awards Achieved</div>
                {% if number_of_donations > 0 %}
                    <table class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Amount Required</th>
                                <th>Acheived</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for campaign_award in campaign_awards %}
                                {% if campaign_award.campaignawardtype.value == "classroom" %}
                                    {% if campaign_award.campaignawardstyle.value == "level" %}
                                        <tr {% if donation_amount >= campaign_award.amount %} class="success" {% endif %}>
                                            <td>{{ campaign_award.name }}</td>
                                            <td class="col-xs-3" style="text-align:right;">${{ campaign_award.amount|number_format(2, '.', ',') }}</td>
                                            <td class="col-xs-1" style="text-align:center;">
                                                {% if donation_amount >= campaign_award.amount %}
                                                    <span class="glyphicon glyphicon-ok"></span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                            <tbody></table>
                        {% else %}
                            <div class="panel-body" style="font-size:120%;">
                                <div style="text-align:center">
                                    <span class="lead">No donations yet!</span>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
      {% endblock %}
  {% block javascripts %}
      <script>
          $(document).ready(function() {
              var ctx = $("#myChart");

              var data = {
                  labels: [
                      "January",
                      "February",
                      "March",
                      "April",
                      "May",

{% extends 'crud.html.twig' %}
{% use 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>View Donation</h1>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <dl class="dl-horizontal">
                <dt>ID</dt>
                <dd>{{ causevoxdonation.id }}</dd>
                <dt>Donated At</dt>
                <dd>{{ causevoxdonation.donatedAt|date("m/d/Y") }}</dd>
                <dt>Type</dt>
                <dd>{{ causevoxdonation.type }}</dd>                
                <dt>Teacher</dt>
                <dd>{{ causevoxdonation.student.teacher.grade.name }}
                    -
                    {{ causevoxdonation.student.teacher.teachername }}</dd>
                <dt>Student</dt>
                <dd>{{ causevoxdonation.student.name }}</dd>
                <dt>Donation Page</dt>
                <dd>{{ causevoxdonation.donationPage }}</dd>
                <dt>Donor Email</dt>
                <dd>{{ causevoxdonation.donorEmail }}</dd>
                <dt>Amount</dt>
                <dd>${{ causevoxdonation.amount|number_format(2, '.', ',') }}</dd>

            </dl>

            {{ form_start(delete_form) }}
            <a href="{{ path(entity|lower ~ '_index') }}" class="btn btn-info">Back</a>
            <a href="{{ path(entity|lower ~ '_edit', { 'id': causevoxdonation.id }) }}" class="btn btn-primary">Edit</a>
            <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete {{causevoxdonation.id}}?')" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}

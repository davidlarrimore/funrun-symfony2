{% extends 'crud.html.twig' %}

{% block body %}

    <div class="row dashboard">
        <div class="col-sm-12">
            <div class="panel panel-info" data-mh="row-1" style="text-align:center;vertical-align: middle;">
                <div class="panel-heading">Overall Campaign Progress</div>
                <div class="panel-body dashboard-ticker">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="progress">
                                <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="{{ total_donation_amount / campaign_funding_goal * 100}}" aria-valuemin="0" aria-valuemax="100" style="width:{{ total_donation_amount / campaign_funding_goal * 100}}%">
                                    <span>{{ (total_donation_amount / campaign_funding_goal * 100)|number_format(2, '.', ',')}}% Complete</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4" style="text-align:center;vertical-align: middle;">
                            ${{ total_donation_amount|number_format(2, '.', ',') }}
                            / ${{ campaign_funding_goal|number_format(2, '.', ',') }}
                        </div>
                        <div class="col-sm-4" style="text-align:center;vertical-align: middle;">
                            <div id="track" data-countdown="{{ campaign_end_date_countdown }}"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row dashboard">
        <div class="col-sm-4">
            <div class="panel panel-info" data-mh="row-1">
                <div class="panel-heading">Donations</div>
                <div class="panel-body">
                    <canvas id="myChart" width="200" height="200"></canvas>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-info" data-mh="row-1">
                <div class="panel-heading">Donations by Class</div>
                <table class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Grade</th>
                            <th>Teacher</th>
                            <th>Donations</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for teacher in teachers %}
                            <tr>
                                <td>{{ teacher.grade_name }}</td>
                                <td>{{ teacher.teacherName }}</td>
                                <td>${{ teacher.donation_amount|number_format(2, '.', ',') }}</td>
                                <td>{{ teacher.total_donations }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
    $('[data-countdown]').each(function() {
      var $this = $(this), finalDate = $(this).data('countdown');
      $this.countdown(finalDate, function(event) {
        $this.html(event.strftime(''
    + '<span class="label label-info">%D</span> day%!D &nbsp;&nbsp;'
    + '<span class="label label-info">%H</span> hours &nbsp;&nbsp;'
    + '<span class="label label-info">%M</span> min &nbsp;&nbsp;'
    + '<span class="label label-info">%S</span> sec'));
      });
    });
    </script>
{% endblock %}

{% extends 'manage.html.twig' %}

{% block body %}

<div class="card">
<div class="card-block">
        <div class="row">
            <div class="col-sm-5">
                <h4 class="card-title mb-0">Teachers</h4>
                <div class="small text-muted">xxxxxxx</div>
            </div>
            <!--/.col-->
            <div class="col-sm-7 hidden-sm-down">
                <button type="button" disabled class="btn btn-primary float-right"><i class="icon-cloud-download"></i>
                </button>
                <div class="btn-toolbar float-right" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group mr-3" data-toggle="buttons" aria-label="First group">
                        <a href="{{ path('manageTeacher_new', {'campaignUrl':campaign.url}) }}" class="btn btn-outline-secondary">
                            <i class="fa fa-plus"></i>
                            Add New</a>
                        <a href="{{ path('manageTeacher_upload', {'campaignUrl':campaign.url}) }}" class="btn btn-outline-secondary">
                            <i class="fa fa-upload"></i>
                            Upload CSV</a>
                    </div>
                </div>
            </div>
            <!--/.col-->
        </div>
        <!--/.row-->
        <br/>
          <table class="table table-responsive table-hover table-outline mb-0">
              <thead class="thead-default">
                  <tr>
                      <th>Grade</th>
                      <th>Teacher's Name</th>
                      <th>Donations</th>
                      <th>Rank</th>
                      {% if is_granted('ROLE_USER') %}<th class="col-md-2 col-sm-1">Actions</th>{% endif %}
                  </tr>
              </thead>
              <tbody>
                  {% for teacher in teachers %}
                      <tr>
                          <td>{% if is_granted('ROLE_USER') %}<a href="{{ path('grade_show', { 'id': teacher.grade_id }) }}">{{ teacher.grade_name}}</a>{% else %}{{ teacher.grade_name}}{% endif %}</td>
                          <td><a href="{{ path(entity|lower ~ '_show', {'campaignUrl': campaign.url, 'id': teacher.id }) }}">{{ teacher.teacher_name }}</a></td>
                          <td style="text-align:right;">{% if not teacher.donation_amount == 0 %}${{ teacher.donation_amount|number_format(2, '.', ',')}}</span>{% endif %}</td>
                          <td style="text-align:center;vertical-align: middle;"><span class="label label-{% if teacher.rank == 1 %}success{% elseif teacher.rank == 2 %}warning{% elseif teacher.rank == 3 %}primary{% else %}default{% endif %}">{{ teacher.rank}}</span></td>
                          {% if is_granted('ROLE_USER') %}
                          <td style="text-align:center;vertical-align: middle;">
                              <a href="{{ path(entity|lower ~ '_show', {'campaignUrl': campaign.url, 'id': teacher.id }) }}" class="btn btn-sm btn-info">
                                  <i class="glyphicon glyphicon-eye-open"></i>
                                  <span class="hidden-xs hidden-sm">
                                      View</span>
                              </a>
                              {% if is_granted('ROLE_ADMIN') %}<a href="{{ path('manageTeacher_edit', {'campaignUrl': campaign.url, 'id': teacher.id }) }}" class="btn btn-sm btn-warning">
                                  <i class="glyphicon glyphicon-edit"></i>
                                  <span class="hidden-xs hidden-sm">
                                      Edit</span>
                              </a>{% endif %}
                          </td>
                          {% endif %}
                      </tr>
                  {% endfor %}
              </tbody>
          </table>
        </div>
    </div>


{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('.table').DataTable({ "pageLength": 50, "order": [[ 3, "asc" ]]});
        });
    </script>
{% endblock %}

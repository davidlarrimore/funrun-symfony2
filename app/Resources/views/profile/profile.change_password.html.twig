{% extends 'template.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block body %}
<div class="row">
  <div class="col-md-8 offset-md-2">
    <hr/>
    <div class="">
      <form name="user" method="post" class="">
        <div class="form-group">
          <div class="col-sm-8">
            <label class="required" for="user_password_current">Current Password</label>
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">
                <i class="fa fa-key" aria-hidden="true"></i>
              </span>
              <input type="password" id="user_password_current" name="user[password][current]" required="required" class="form-control">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-8">
            <label class="required" for="user_password_first">New Password</label>
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">
                <i class="fa fa-key" aria-hidden="true"></i>
              </span>
              <input type="password" id="user_password_first" name="user[password][first]" required="required" class="form-control">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-8">
            <label class="required" for="user_password_second">Confirm New Password</label>
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">
                <i class="fa fa-key" aria-hidden="true"></i>
              </span>
              <input type="password" id="user_password_second" name="user[password][second]" required="required" class="form-control">
            </div>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col">
            <button type="submit" id="submit" class="btn btn-primary">Change Password
              <i class="fa fa-arrow-right" aria-hidden="true"></i>
            </button>
          </div><!-- ./col -->
        </div><!-- ./row -->

        <input type="hidden" id="user_defaultCampaignId" name="user[defaultCampaignId]"><input type="hidden" id="user__token" name="user[_token]" value="oPf8W_BVWF3f9zvbETkokwPUnKXWK_I9HYOGSyt5Thk">
      </form>
    </div>
  </div>
</div>
{% endblock body %}

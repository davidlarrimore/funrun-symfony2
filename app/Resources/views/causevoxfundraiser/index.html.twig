{% extends 'template.html.twig' %}
{% use 'bootstrap_3_layout.html.twig' %}

{% block css %}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/dt-1.10.12/fh-3.1.2/r-2.1.0/sc-1.4.2/datatables.min.css"/>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>CauseVox Fundraisers</h1>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div style="text-align:right;">
                <a href="{{ path(entity|lower ~ '_new') }}" class="btn btn-default">
                    <i class="glyphicon glyphicon-plus"></i>
                    Add New</a>
                <a href="{{ path(entity|lower ~ '_upload') }}" class="btn btn-default">
                    <i class="glyphicon glyphicon-upload"></i>
                    Upload CSV</a>
            </div>
            <br/>
            <table class="table table-bordered table-striped table-condensed">
                <thead>
                    <tr>
                        <th>URL</th>
                        <th>Teacher</th>
                        <th>Student</th>
                        <th span class="hidden-xs hidden-sm">email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for causevoxfundraiser in causevoxfundraisers %}
                        <tr>
                            <td>
                                <a href="{{ path(entity|lower ~ '_show', { 'id': causevoxfundraiser.id }) }}">{{ causevoxfundraiser.url }}</a>
                            </td>
                            <td><a href="{{ path('teacher_show', {'campaignUrl':campaign.url, 'id': causevoxfundraiser.student.teacher.id }) }}">{{ causevoxfundraiser.teacher.grade.name }} - {{ causevoxfundraiser.teacher.teachername }}</a></td>
                            <td>
                                {% if causevoxfundraiser.student is not null %}<a href="{{ path('student_show', { 'id': causevoxfundraiser.student.id }) }}">{{ causevoxfundraiser.student.name }}</a>{% endif %}
                            </td>
                            <td span class="hidden-xs hidden-sm">{{ causevoxfundraiser.email }}</td>
                            <td style="text-align:center;">
                                <a href="{{ path(entity|lower ~ '_show', { 'id': causevoxfundraiser.id }) }}" class="btn btn-sm btn-info">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                    <span class="hidden-xs hidden-sm">
                                        View</span>
                                </a>
                                <a href="{{ path(entity|lower ~ '_edit', { 'id': causevoxfundraiser.id }) }}" class="btn btn-sm btn-warning">
                                    <i class="glyphicon glyphicon-edit"></i>
                                    <span class="hidden-xs hidden-sm">
                                        Edit</span>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="application/javascript" src="https://cdn.datatables.net/v/bs/dt-1.10.12/fh-3.1.2/r-2.1.0/sc-1.4.2/datatables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.table').DataTable({ "pageLength": 50, "order": [[ 1, "desc" ]]});
        });
    </script>
{% endblock %}

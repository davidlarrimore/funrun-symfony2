                            </li>
                            <li role="separator" class="divider"></li>
                            <li {% if app.request.attributes.get('_route') == 'campaignsetting_index'%} class="active" {% endif %}>
                                <a href="{{ path('campaignsetting_index') }}">
                                    <span class="glyphicon glyphicon-cog"></span>
                                    Campaign Settings</a>
                            </li>
                            <li {% if app.request.attributes.get('_route') == 'campaignaward_index'%} class="active" {% endif %}>
                                <a href="{{ path('campaignaward_index') }}">
                                    <span class="glyphicon glyphicon-star"></span>
                                    Awards</a>
                            </li>
                            <li {% if app.request.attributes.get('_route') == 'offlinedonation_index'%} class="active" {% endif %}>
                                <a href="{{ path('donation_index') }}">
                                    <span class="glyphicon glyphicon-usd"></span>Donations</a>
                            </li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">CauseVox</li>
                            <li {% if app.request.attributes.get('_route') == 'causevoxteam_index'%} class="active" {% endif %}>
                                <a href="{{ path('causevoxteam_index') }}">
                                    <span class="glyphicon glyphicon-apple"></span>
                                    Causevox Teams</a>
                            </li>
                            <li {% if app.request.attributes.get('_route') == 'causevoxfundraiser_index'%} class="active" {% endif %}>
                                <a href="{{ path('causevoxfundraiser_index') }}">
                                    <span class="glyphicon glyphicon-user"></span>
                                    Causevox Fundraisers</a>
                            </li>
                        </ul>
                    </li>

                      <a href="{{campaign_settings.campaign_url}}/{{causevoxfundraiser.url}}">{{ causevoxfundraiser.student.teacher.grade.name }} - {{causevoxfundraiser.firstName}} {{causevoxfundraiser.lastName}}</a>

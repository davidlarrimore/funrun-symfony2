{% extends 'crud.html.twig' %}
{% use 'bootstrap_3_layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-4">
            <h1>Teachers</h1>
        </div>
        <div class="col-md-8" style="text-align:right;">
            <div style="">
                <a href="{{ path(entity|lower ~ '_new') }}" class="btn btn-success">
                    <i class="glyphicon glyphicon-plus"></i>
                    Add New</a>
                <a href="{{ path(entity|lower ~ '_upload') }}" class="btn btn-danger">
                    <i class="glyphicon glyphicon-upload"></i>
                    Upload CSV</a>
            </div>
        </div>
        <br/>
    </div>

    <div class="clearfix"></div>
    <hr/>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <table class="table table-bordered table-condensed table-striped">
                <thead>
                    <tr>
                        <th>Grade</th>
                        <th>Teacher's Name</th>
                        <th>Donations</th>
                        <th>Rank</th>
                        <th class="col-md-2 col-sm-1">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for teacher in teachers %}
                        <tr>
                            <td><a href="{{ path('grade_show', { 'id': teacher.grade_id }) }}">{{ teacher.grade_name}}</a></td>
                            <td><a href="{{ path(entity|lower ~ '_show', { 'id': teacher.teacher_id }) }}">{{ teacher.teacher_name }}</a></td>
                            <td style="text-align:right;">{% if not teacher.donation_amount == 0 %}${{ teacher.donation_amount|number_format(2, '.', ',')}}</span>{% endif %}</td>
                            <td style="text-align:center;vertical-align: middle;"><span class="label label-{% if teacher.rank == 1 %}success{% elseif teacher.rank == 2 %}warning{% elseif teacher.rank == 3 %}primary{% else %}default{% endif %}">{{ teacher.rank}}</span></td>
                            <td style="text-align:center;vertical-align: middle;">
                                <a href="{{ path(entity|lower ~ '_show', { 'id': teacher.teacher_id }) }}" class="btn btn-xs btn-info">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                    <span class="hidden-xs hidden-sm">
                                        View</span>
                                </a>
                                {% if is_granted('ROLE_ADMIN') %}<a href="{{ path(entity|lower ~ '_edit', { 'id': teacher.teacher_id }) }}" class="btn btn-xs btn-warning">
                                    <i class="glyphicon glyphicon-edit"></i>
                                    <span class="hidden-xs hidden-sm">
                                        Edit</span>
                                </a>{% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('.table').DataTable({ "pageLength": 50});
        });
    </script>
{% endblock %}

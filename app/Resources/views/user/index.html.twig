{% extends 'crud.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h1>User list</h1>

                <table>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>
                                    <a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a>
                                </td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('user_new') }}">Create a new entry</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
